<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <!-- Versions -->
        <TextView
            android:id="@+id/versionsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/device_info_section_versions"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/versionsChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:chipSpacingVertical="0dp" />

        <!-- Extensions -->
        <TextView
            android:id="@+id/extensionsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/device_info_section_extensions"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/extensionsChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:chipSpacingVertical="0dp" />

        <!-- AAGUID -->
        <TextView
            android:id="@+id/aaguidLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/device_info_section_aaguid"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/aaguidValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="?attr/colorSurfaceVariant"
            android:fontFamily="monospace"
            android:padding="12dp"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="12sp" />

        <!-- Options -->
        <TextView
            android:id="@+id/optionsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/device_info_section_options"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/optionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical" />

        <!-- Supported Interfaces -->
        <TextView
            android:id="@+id/interfacesLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/device_info_section_interfaces"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/interfacesChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:chipSpacingVertical="0dp" />

        <!-- Supported Algorithms -->
        <TextView
            android:id="@+id/algorithmsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/device_info_section_algorithms"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/algorithmsChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:chipSpacingVertical="0dp" />

        <!-- Limits -->
        <TextView
            android:id="@+id/limitsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/device_info_section_limits"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/limitsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>
</ScrollView>
